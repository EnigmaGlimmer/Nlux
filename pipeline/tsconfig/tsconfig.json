{
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "composite": false,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": [
      "dom",
      "es2018"
    ]
  }
}
